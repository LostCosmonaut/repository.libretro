<?xml version="1.0" encoding="UTF-8"?>
<addon id="gameclient.bsnes.performance"
        name="bSNES (Performance)"
        version="1.0.2"
        provider-name="Libretro">
    <requires>
        <import addon="xbmc.libretro" version="1.0.0"/>
    </requires>
    <extension point="xbmc.gameclient"
            library_android=""
            library_linux=""
            library_osx=""
            library_windx="libretro-092-bsnes-performance.dll"
            library_wingl="libretro-092-bsnes-performance.dll">
        <platforms>SNES</platforms>
        <extensions>sfc|smc</extensions>
    </extension>
        <extension point="xbmc.addon.metadata">
        <summary lang="en">bSNES (Performance profile)</summary>
        <description>Libretro implementation of the core emulation in bSNES, a Super Nintendo (SNES) emulator. Written by byuu, ported by Ver Greeneyes and Themaister.

Supported files: .sfc, .smc

Source: http://gitorious.org/bsnes/bsnes</description>
        <nofanart>true</nofanart>
        <platform>windx wingl</platform>
        <!--<broken>Crashes on startup, single-frame audio, faulty VFS support</broken>-->
    </extension>
</addon>
