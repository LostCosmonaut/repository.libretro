<?xml version="1.0" encoding="UTF-8"?>
<addon id="gameclient.bnes"
        name="bNES"
        version="1.0.2"
        provider-name="Libretro">
    <requires>
        <import addon="xbmc.libretro" version="1.0.0"/>
    </requires>
    <extension point="xbmc.gameclient"
            library_android=""
            library_linux=""
            library_osx=""
            library_windx="libretro-git-bnes-x86.dll"
            library_wingl="libretro-git-bnes-x86.dll">
        <platforms>NES</platforms>
        <extensions>nes</extensions>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">bNES</summary>
        <description>libretro port of bNES, a NES emulator.[CR][CR]Authors: byuu, Ryphecha.[CR][CR]Source: https://github.com/libretro/bnes-libretro</description>
        <platform>windx wingl</platform>
        <noicon>true</noicon>
        <nofanart>true</nofanart>
        <broken>Poor performance and reported crashes. Use FCEU-Next.</broken>
    </extension>
</addon>
