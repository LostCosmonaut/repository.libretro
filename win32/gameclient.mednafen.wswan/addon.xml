<?xml version="1.0" encoding="UTF-8"?>
<addon id="gameclient.mednafen.wswan"
        name="Mednafen WonderSwan"
        version="1.0.2"
        provider-name="Libretro">
    <requires>
        <import addon="xbmc.libretro" version="1.0.0"/>
    </requires>
    <extension point="xbmc.gameclient"
            library_android=""
            library_linux=""
            library_osx=""
            library_windx="libretro-0928-mednafen-wswan.dll"
            library_wingl="libretro-0928-mednafen-wswan.dll">
        <platforms>WonderSwan|WonderSwan Color</platforms>
        <extensions>ws|wsc|zip</extensions>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Mednafen WonderSwan</summary>
        <description>Mednafen is a portable multi-system emulator. This is a port of the Mednafen WonderSwan core to the libretro API. Mednafen's WonderSwan (Color) emulation is based off of Cygne.

Supported files: .ws, .wsc, .zip

Source: https://github.com/libretro/mednafen-libretro</description>
        <nofanart>true</nofanart>
        <platform>windx wingl</platform>
    </extension>
</addon>
