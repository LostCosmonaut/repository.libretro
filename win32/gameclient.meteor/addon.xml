<?xml version="1.0" encoding="UTF-8"?>
<addon id="gameclient.meteor"
        name="Meteor GBA"
        version="1.0.3"
        provider-name="Libretro">
    <requires>
        <import addon="xbmc.libretro" version="1.0.0"/>
    </requires>
    <extension point="xbmc.gameclient"
            library_android=""
            library_linux=""
            library_osx=""
            library_windx="libretro-git-meteor.dll"
            library_wingl="libretro-git-meteor.dll">
        <platforms>Game Boy Advance</platforms>
        <extensions>gba</extensions>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Meteor GBA</summary>
        <description>Meteor is a Nintendo Gameboy Advance emulator.[CR][CR]Authors: Philippe Daouadi &lt;p.daouadi@free.fr&gt;, Hans-Kristian Arntzen (libretro port and fixes) &lt;maister@archlinux.us&gt;[CR][CR]Source: https://github.com/libretro/meteor-libretro</description>
        <noicon>true</noicon>
        <nofanart>true</nofanart>
        <platform>windx wingl</platform>
    </extension>
</addon>
