<?xml version="1.0" encoding="UTF-8"?>
<addon id="gameclient.nx"
        name="NXEngine"
        version="1.0.1"
        provider-name="Libretro">
    <requires>
        <import addon="xbmc.libretro" version="1.0.1"/>
    </requires>
    <extension point="xbmc.gameclient"
            library_android=""
            library_linux="libretro-nx.so"
            library_osx=""
            library_windx=""
            library_wingl="">
        <platforms></platforms>
        <extensions>bin|exe|zip</extensions>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">NXEngine</summary>
        <description>NXEngine is a complete open-source clone/rewrite of the masterpiece jump-and-run platformer Doukutsu Monogatari (also known as Cave Story).[CR][CR]Original author: Caitlin Shaw (rogueeve)[CR][CR]Source: https://github.com/libretro/nxengine-libretro</description>
        <noicon>true</noicon>
        <nofanart>true</nofanart>
        <platform>linux</platform>
    </extension>
</addon>
