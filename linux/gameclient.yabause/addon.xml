<?xml version="1.0" encoding="UTF-8"?>
<addon id="gameclient.yabause"
        name="Yabause"
        version="0.9.12"
        provider-name="Libretro">
    <requires>
        <import addon="xbmc.libretro" version="1.0.0"/>
    </requires>
    <extension point="xbmc.gameclient"
            library_android=""
            library_linux="libretro-yabause.so"
            library_osx=""
            library_windx=""
            library_wingl="">
        <platforms>Sega Saturn</platforms>
        <extensions>bin|cue</extensions>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Yabause</summary>
        <description>Yabause stands for Yet Another Buggy And Uncomplete Saturn Emulator. Yabause can boot Sega Saturn bios and games, some of which are playable.

Supported files: .bin, .cue

Source: https://github.com/libretro/yabause</description>
        <nofanart>true</nofanart>
        <platform>linux</platform>
    </extension>
</addon>
