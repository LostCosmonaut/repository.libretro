<?xml version="1.0" encoding="UTF-8"?>
<addon id="gameclient.bsnes.balanced"
        name="bSNES (Balanced)"
        version="1.0.2"
        provider-name="Libretro">
    <requires>
        <import addon="xbmc.libretro" version="1.0.0"/>
    </requires>
    <extension point="xbmc.gameclient"
            library_android=""
            library_linux="libretro-bsnes-balanced.so"
            library_osx=""
            library_windx=""
            library_wingl="">
        <platforms>SNES</platforms>
        <extensions>sfc|smc</extensions>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">bSNES (Balanced profile)</summary>
        <description>Libretro implementation of the core emulation in bSNES, a Super Nintendo (SNES) emulator. Written by byuu, ported by Ver Greeneyes and Themaister.

Supported files: .sfc, .smc

Source: http://gitorious.org/bsnes/bsnes</description>
        <nofanart>true</nofanart>
        <platform>linux</platform>
    </extension>
</addon>
