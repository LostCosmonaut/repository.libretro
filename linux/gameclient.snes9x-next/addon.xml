<?xml version="1.0" encoding="UTF-8"?>
<addon id="gameclient.snes9x-next"
        name="Snes9x-Next"
        version="1.0.1"
        provider-name="Libretro">
    <requires>
        <import addon="xbmc.libretro" version="1.0.0"/>
    </requires>
    <extension point="xbmc.gameclient"
            library_android=""
            library_linux="libretro-snes9x-next.so"
            library_osx=""
            library_windx=""
            library_wingl="">
        <platforms>SNES</platforms>
        <extensions>smc|fig|sfc|gd3|gd7|dx2|bsx|swc|zip</extensions>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Snes9x-Next</summary>
        <description>Snes9x-Next is based on Snes9x, but has been heavily modified/speed-hacked to achieve better speed.[CR][CR]Source: https://github.com/libretro/snes9x-next</description>
        <noicon>true</noicon>
        <nofanart>true</nofanart>
        <platform>linux</platform>
    </extension>
</addon>
