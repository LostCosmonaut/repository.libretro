<?xml version="1.0" encoding="UTF-8"?>
<addon id="gameclient.mednafen.wswan.x86"
        name="Mednafen WonderSwan (32-bit)"
        version="1.0.1"
        provider-name="Libretro">
    <requires>
        <import addon="xbmc.libretro" version="1.0.0"/>
    </requires>
    <extension point="xbmc.gameclient"
            library_android=""
            library_linux="libretro-mednafen-wswan.so"
            library_osx=""
            library_windx=""
            library_wingl="">
        <platforms>WonderSwan|WonderSwan Color</platforms>
        <extensions>ws|wsc|zip</extensions>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Mednafen WonderSwan</summary>
        <description>Mednafen is a portable multi-system emulator. This is port of the Mednafen WonderSwan core to the libretro API.[CR][CR]Mednafen's WonderSwan (Color) emulation is based off of Cygne. WSR (WonderSwan sound rip format) playback is supported.[CR][CR]Source: https://github.com/libretro/mednafen-libretro</description>
        <noicon>true</noicon>
        <nofanart>true</nofanart>
        <platform>linux</platform>
    </extension>
</addon>
